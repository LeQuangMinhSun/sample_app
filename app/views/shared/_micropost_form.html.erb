<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".placeholder") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: Settings.valid_image_format %>
  </span>
  <%= f.submit t(".post_button"), class: "btn btn-primary" %>
<% end %>
