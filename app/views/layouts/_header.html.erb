<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container"><%= link_to t("defaults.sample_app"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("defaults.languages.english"), locale: :en %></li>
        <li><%= link_to t("defaults.languages.vietnamese"), locale: :vi %></li>
        <li><%= link_to t("defaults.home"), root_path %></li>
        <li><%= link_to t("defaults.help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to t("defaults.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", id: "account", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%=  t ".nav.account" %>
              <b class="caret"></b>
            <% end %>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t(".nav.profile"), current_user %></li>
              <li><%= link_to t(".nav.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("defaults.log_out"), logout_path, data: {"turbo-method": :delete} %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("defaults.log_in"), login_path %></li>
          <li><%= link_to t("defaults.sign_up"), signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
